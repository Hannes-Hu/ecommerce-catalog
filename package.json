{
  "name": "ecommerce-catalog",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/ecommerce-catalog/browser/stats.json",
    "build": "ng build",
    "build:production": "ng build --configuration=production",
    "build:development": "ng build --configuration=development",
    
    "netlify:build": "npm run build:production",
    
    "docker:build": "docker build -t ecommerce-app .",
    "docker:run": "docker run -p 80:80 ecommerce-app",
    "docker:compose": "docker-compose up -d",
    "docker:compose-dev": "docker-compose up",
    "docker:compose-down": "docker-compose down",
    
    "dev": "ng serve --port 4200 --host 0.0.0.0",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    
    "test": "ng test",
    "test:e2e": "ng e2e",
    "lint": "ng lint",

    "start": "ng serve",
    "watch": "ng build --watch --configuration development"
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@ngrx/effects": "^17.0.1",
    "@ngrx/entity": "^17.0.1",
    "@ngrx/store": "^17.0.1",
    "@ngrx/store-devtools": "^17.0.1",
    "bootstrap": "^5.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.10",
    "@angular/cli": "^17.3.10",
    "@angular/compiler-cli": "^17.0.0",
    "@ngrx/schematics": "^17.2.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.0"
  }
}
